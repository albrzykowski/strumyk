{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Strumyk DSL Schema v1.0",
  "type": "object",
  "required": ["net", "version", "places", "transitions"],
  "properties": {
    "net": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "places": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "transitions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["id", "input", "output"],
        "properties": {
          "id": { "type": "string" },
          "input": {
            "type": "array",
            "uniqueItems": true,
            "items": { "type": "string" },
            "minItems": 1
          },
          "output": {
            "type": "array",
            "uniqueItems": true,
            "items": { "type": "string" },
            "minItems": 1
          },
          "condition": { "type": "string" },
          "label": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
